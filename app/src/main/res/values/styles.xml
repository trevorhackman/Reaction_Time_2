<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat.Small">
        <!-- Text -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20dp</item> <!-- Default is 22sp-->
        <item name="android:textStyle">bold</item>

        <!-- Shadow really makes the text pop, not the same as the outline I still seek but it's still rather nice
        Dx and Dy are the x,y translations, otherwise shadow is directly beneath text,
        Shadow Radius is kinda how 'high' the object is, makes the shadow bigger but more faded-->
        <!--<item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>-->

        <item name="android:paddingLeft">50dp</item>
    </style>

</resources>
